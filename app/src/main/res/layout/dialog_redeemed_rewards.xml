<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogEndChallenge"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:id="@+id/dialogBox"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/white_box" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My E-Vouchers"
            android:padding="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/mybutton"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reward1_Tab"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/round_view"
            android:backgroundTint="@color/gray"
            android:orientation="vertical"
            android:padding="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/reward2_Tab"
            app:layout_constraintTop_toBottomOf="@id/dialog_title">

            <TextView
                android:id="@+id/reward1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Days Data Roaming"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/reward1_count"
                app:layout_constraintStart_toStartOf="@+id/reward1_Tab"
                app:layout_constraintTop_toTopOf="@id/reward1_Tab"
                app:layout_constraintBottom_toBottomOf="@id/reward1_Tab"/>

            <TextView
                android:id="@+id/reward1_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reps"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@id/reward1"
                app:layout_constraintEnd_toEndOf="@+id/reward1_Tab"
                app:layout_constraintTop_toTopOf="@+id/reward1_Tab"
                app:layout_constraintBottom_toBottomOf="@id/reward1_Tab"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reward2_Tab"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/round_view"
            android:backgroundTint="@color/gray"
            android:orientation="vertical"
            android:padding="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/reward3_Tab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reward1_Tab">

            <TextView
                android:id="@+id/reward2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Day Data Roaming"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/reward2_count"
                app:layout_constraintStart_toStartOf="@+id/reward2_Tab"
                app:layout_constraintTop_toTopOf="@id/reward2_Tab"
                app:layout_constraintBottom_toBottomOf="@id/reward2_Tab"/>

            <TextView
                android:id="@+id/reward2_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reps"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@id/reward2"
                app:layout_constraintEnd_toEndOf="@+id/reward2_Tab"
                app:layout_constraintTop_toTopOf="@+id/reward2_Tab"
                app:layout_constraintBottom_toBottomOf="@id/reward2_Tab"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reward3_Tab"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/round_view"
            android:backgroundTint="@color/gray"
            android:orientation="vertical"
            android:padding="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/reward4_Tab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reward2_Tab">

            <TextView
                android:id="@+id/reward3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5 Phone Bill Voucher"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/reward3_count"
                app:layout_constraintStart_toStartOf="@+id/reward3_Tab"
                app:layout_constraintTop_toTopOf="@id/reward3_Tab"
                app:layout_constraintBottom_toBottomOf="@id/reward3_Tab"/>

            <TextView
                android:id="@+id/reward3_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reps"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@id/reward3"
                app:layout_constraintEnd_toEndOf="@+id/reward3_Tab"
                app:layout_constraintTop_toTopOf="@+id/reward3_Tab"
                app:layout_constraintBottom_toBottomOf="@id/reward3_Tab"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reward4_Tab"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/round_view"
            android:backgroundTint="@color/gray"
            android:orientation="vertical"
            android:padding="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reward3_Tab">

            <TextView
                android:id="@+id/reward4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$3 Phone Bill Voucher"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/reward4_count"
                app:layout_constraintStart_toStartOf="@+id/reward4_Tab"
                app:layout_constraintTop_toTopOf="@id/reward4_Tab"
                app:layout_constraintBottom_toBottomOf="@id/reward4_Tab"/>

            <TextView
                android:id="@+id/reward4_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reps"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@id/reward4"
                app:layout_constraintEnd_toEndOf="@+id/reward4_Tab"
                app:layout_constraintTop_toTopOf="@+id/reward4_Tab"
                app:layout_constraintBottom_toBottomOf="@id/reward4_Tab"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_view"
            android:backgroundTint="@color/orange"
            android:padding="12dp"
            android:text="Close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/padding_standard"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
